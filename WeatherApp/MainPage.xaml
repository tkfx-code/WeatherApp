<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WeatherApp.ViewModels"
             xmlns:model="clr-namespace:WeatherApp.Model"
             x:DataType="viewmodels:MainPageViewModel"
             x:Class="WeatherApp.MainPage"
             BackgroundColor="DarkCyan">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Weather Test Mode" 
               FontSize="24" 
               HorizontalOptions="Center" 
               TextColor="White"/>

        <Entry Text="{Binding SelectedCity, Mode=TwoWay}" 
               Placeholder="Skriv en stad (t.ex. Stockholm)..."
               TextColor="White"
               PlaceholderColor="LightGray"/>

        <Button Text="Testa sökning" 
                Command="{Binding FetchCityWeatherCommand}"
                BackgroundColor="Orange"
                TextColor="Black"/>

        <ActivityIndicator IsRunning="{Binding IsBusy}" Color="White" />

        <CollectionView ItemsSource="{Binding Weather}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:WeatherModel">
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding name}" FontSize="30" TextColor="White" HorizontalOptions="Center"/>
                        <Label Text="{Binding main.temp, StringFormat='{0:F1}°C'}" FontSize="50" TextColor="Orange" HorizontalOptions="Center"/>
                        <Label Text="{Binding weather[0].description}" TextColor="LightGray" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--<Label Text="{Binding Weather[0].name, StringFormat='Hittade data för: {0}'}" 
               TextColor="SpringGreen"
               FontSize="20"
               HorizontalOptions="Center"
               IsVisible="{Binding Weather.Count}"/>-->

        <Label Text="{Binding ErrorMessage}" 
               TextColor="Red" 
               HorizontalOptions="Center"/>
    </VerticalStackLayout>

    <!--Dynamic Background--><!--
    <Grid>
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{Binding BackgroundStart}" Offset="0.0"/>
                    <GradientStop Color="{Binding BackgroundEnd}" Offset="1.0"/>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>
    </Grid>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            --><!--Top Spacer--><!--
            <BoxView HeightRequest="{Binding IsDetailsVisible, Converter={StaticResource BoolToHeight}}" Color="Transparent"/>

            --><!--Searchbar--><!--
            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto" Margin="0 10">
                <Border Grid.Row="0" Grid.ColumnSpan="2"
                        Style="{StaticResource TransparentCard}"
                        Padding="15,10">
                    <Grid ColumnDefinitions="*, Auto, Auto">
                        <Entry Text="{Binding SelectedCity}"
                                   Placeholder="Search city..."
                                   PlaceholderColor="LightGray"
                                   TextColor="White"
                                   FontSize="18"
                                   ReturnCommand="{Binding FetchCityWeatherCommand}"
                                   Completed="OnSearchCompleted"/>
                        --><!--Clear button--><!--
                        <ImageButton Grid.Column="1"
                                     Source="clear_icon.png"
                                     Command="{Binding ClearCommand}"
                                     IsVisible="{Binding SelectedCity.Length, Converter={StaticResource MinLengthToBool}}"/>
                        --><!--Search button--><!--
                        <ImageButton Grid.Column="2"
                                     Source="search_icon.png"
                                     Command="{Binding FetchCityWeatherCommand}"/>
                    </Grid>
                </Border>

                --><!--Autocomplete dropdown--><!--
                <Border Grid.Row="1" Grid.ColumnSpan="2"
                        IsVisible="{Binding Suggestions}"
                        Style="{StaticResource TransparentCard}"
                        Padding="0"
                        Margin="0 50 0 0">
                    <CollectionView ItemsSource="{Binding Suggestions}"
                                    SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:LocationSuggestion"> 
                                <Border Style="{StaticResource SuggestionCard}">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=SelectLocationCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="{Binding DisplayName}"
                                           TextColor="White"
                                           FontSize="16"/>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>

                --><!--Loading IsBusy--><!--
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="White"
                                   HeightRequest="50"/>

                --><!--Overview Card--><!--
                <Border IsVisible="{Binding Weather.Count}"
                        Style="{StaticResource TransparentCard}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ToggleDetailsCommand}"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Padding="20" Spacing="10">
                        --><!--City and date--><!--
                        <Label Text="{Binding Weather[0].name}"
                           FontSize="32"
                           HorizontalOptions="Center"/>

                        <Label Text="{Binding Weather[0].DateDisplay}"
                               FontSize="16"
                               TextColor="LightGray"
                               HorizontalTextAlignment="Center"/>

                        --><!--Temp & Icon--><!--
                        <Grid ColumnDefinitions="*,Auto,*" Margin="0 10">
                            <Label Grid.Column="1"
                                   Text="{Binding Weather[0].main.temp, StringFormat='{0:F0}°'}"
                                   FontSize="64"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"/>
                        </Grid>

                        <Image Source="{Binding GetIconUrl}"
                               HeightRequest="100"
                               Aspect="AspectFit"/>
                        <Label Text="{Binding Weather[0].weather[0].description}"
                               FontSize="20"
                               TextColor="White"
                               HorizontalTextAlignment="Center"
                               TextTransform="Uppercase"/>

                        --><!--Sunset/Sunrise--><!--
                        <Grid ColumnDefinitions="*,*" Margin="0 10">
                            <Label Grid.Column="0"
                                   Text="{Binding Weather[0].SunriseView}"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="☀"
                                   Margin="10,0" FontSize="24"/>
                            <Label Grid.Column="2"
                                   Text="{Binding Weather[0].SunsetView}"
                                   VerticalOptions="Center"/>
                        </Grid>
                        <Label Text="Details" FontSize="10" HorizontalOptions="Center" Opacity="0.6"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
            --><!--Detailed view, expanded-->

            <!--5-day forecast--><!--
            <Border IsVisible="{Binding IsDetailsVisible}"
                    Style="{StaticResource TransparentCard}">
                <VerticalStackLayout Spacing="15">
                    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                        <HorizontalStackLayout Spacing="15">
                            <CollectionView ItemsSource="{Binding Forecast}"
                                            ItemsLayout="HorizontalList"
                                            HeightRequest="150"
                                            Margin="0 10">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:ForecastItem">
                                        <Border BackgroundColor="#40FFFFFF"
                                                StrokeShape="RoundRectangle 15"
                                                Padding="15"
                                                WidthRequest="100"
                                                Margin="5">
                                            <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                                                <Label Text="{Binding DayDisplay}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalTextAlignment="Center"/>
                                                <Image Source="{Binding IconUrl}"
                                                               HeightRequest="45"
                                                               Aspect="AspectFit"/> --><!--Keep?--><!--
                                                <Label Text="{Binding main.temp, StringFormat='{0:F0}°'}" HorizontalTextAlignment="Center"/>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </HorizontalStackLayout>
                    </ScrollView>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>-->
</ContentPage>
